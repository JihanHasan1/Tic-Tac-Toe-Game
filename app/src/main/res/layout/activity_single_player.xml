<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SinglePlayerActivity"
    android:background="#043524">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:text="Tic Tac Toe"
            android:textColor="#AC9500"
            android:textSize="50dp"
            android:textStyle="bold"
            android:fontFamily="@font/hobo_steady"
            android:textAlignment="center"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="80dp"
            android:layout_marginRight="32dp"
            android:layout_marginBottom="24dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:weightSum="100">

                <Button
                    android:id="@+id/Button0"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:backgroundTint="#043524"
                    android:tag="0"
                    android:textColor="#FFFFFF"
                    android:textSize="55dp" />

                <View
                    android:layout_width="3dp"
                    android:layout_height="match_parent"
                    android:background="#AC9500" />

                <Button
                    android:id="@+id/Button1"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:backgroundTint="#043524"
                    android:tag="1"
                    android:textColor="#FFFFFF"
                    android:textSize="55dp" />

                <View
                    android:layout_width="3dp"
                    android:layout_height="match_parent"
                    android:background="#AC9500" />

                <Button
                    android:id="@+id/Button2"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:backgroundTint="#043524"
                    android:tag="2"
                    android:textColor="#FFFFFF"
                    android:textSize="55dp" />

            </LinearLayout>

            <View
                android:layout_width="270dp"
                android:layout_height="3dp"
                android:layout_gravity="center"
                android:background="#AC9500" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:weightSum="100">

                <Button
                    android:id="@+id/Button3"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:backgroundTint="#043524"
                    android:tag="3"
                    android:textColor="#FFFFFF"
                    android:textSize="55dp" />

                <View
                    android:layout_width="3dp"
                    android:layout_height="match_parent"
                    android:background="#AC9500" />

                <Button
                    android:id="@+id/Button4"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:backgroundTint="#043524"
                    android:tag="4"
                    android:textColor="#FFFFFF"
                    android:textSize="55dp" />

                <View
                    android:layout_width="3dp"
                    android:layout_height="match_parent"
                    android:background="#AC9500" />

                <Button
                    android:id="@+id/Button5"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:backgroundTint="#043524"
                    android:tag="5"
                    android:textColor="#FFFFFF"
                    android:textSize="55dp" />

            </LinearLayout>

            <View
                android:layout_width="270dp"
                android:layout_height="3dp"
                android:layout_gravity="center"
                android:background="#AC9500" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:weightSum="100">

                <Button
                    android:id="@+id/Button6"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:backgroundTint="#043524"
                    android:tag="6"
                    android:textColor="#FFFFFF"
                    android:textSize="55dp" />

                <View
                    android:layout_width="3dp"
                    android:layout_height="match_parent"
                    android:background="#AC9500" />

                <Button
                    android:id="@+id/Button7"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:backgroundTint="#043524"
                    android:tag="7"
                    android:textColor="#FFFFFF"
                    android:textSize="55dp" />

                <View
                    android:layout_width="3dp"
                    android:layout_height="match_parent"
                    android:background="#AC9500" />

                <Button
                    android:id="@+id/Button8"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:backgroundTint="#043524"
                    android:tag="8"
                    android:textColor="#FFFFFF"
                    android:textSize="55dp" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/UserTurnTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="50dp"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold"
            tools:text="User Turn"
            android:textAlignment="center"
            android:fontFamily="@font/aquire_normal"/>

        <Button
            android:id="@+id/btnRestart"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:backgroundTint="#AC9500"
            android:text="Reset"
            android:textColor="#000000"
            android:textSize="30dp"
            android:textStyle="bold"
            android:fontFamily="@font/hobo_steady"/>

        <Button
            android:id="@+id/btnBack"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:backgroundTint="#AC9500"
            android:text="Back"
            android:textColor="#000000"
            android:textSize="30dp"
            android:textStyle="bold"
            android:fontFamily="@font/hobo_steady"/>
    </LinearLayout>
</ScrollView>